<div class="container ">
<h1>All Author`s</h1>
<style>
table, th, td {
    text-align: left;
  padding: 8px;

  border:1px solid black; 
}


th {
  background-color: rgba(150, 212, 212, 0.4);
}
</style>

<table style="width:50%">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th Colspan="3"> Actions </th>
        </tr>
    </thead>
    <tbody>
        <% @authors.each do |author| %>
            <tr>
                <td><%= author.f_name%></td>
                <td><%= author.l_name%></td>
                <td><%= author.email%></td>
                <td><%= link_to 'View', author%>
                <td><%= link_to "Edit", edit_author_path(author) %></td>
                <td><%= link_to "Destroy", author, data: {turbo_method: :delete, turbo_confrim: "Are you sure?"}, :cofirm => "Are you sure?" %></td>
            </tr>
        <% end %>
    </tbody>
</table>
</div>

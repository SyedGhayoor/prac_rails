<br>
<% if @noval.errors.any? %>
  <div class="alert alert-danger alert-dismissible col-lg-4 mx-auto fade show">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <div >
      <ul>
        <% @noval.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>